{% extends 'base.twig' %}

{% block content %}
    <h1>Talks</h1>

    <table id="talks-table" class="table table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Submitted</th>
                <th>Speaker</th>
                <th>Title</th>
                <th>Language</th>
                <th>Level</th>
                <th>Avg.</th>
                <th>Votes</th>
                {% if is_granted('ROLE_VOTER') %}
                    <th style="white-space: nowrap">Vote</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for talk in talks %}
                {% set rating = talk.scores[user.username]|default(null) %}
                {% set votes = talk.scores|default([])|length %}

                <tr class="talk" data-talk-id="{{ talk._id }}">
                    <td>{{ talk.submitted|date('Y-m-d H:i') }}</td>
                    <td>{{ talk.speaker.name }}</td>
                    <td><a href="/talks/{{ talk._id }}">{{ talk.title }}</a></td>
                    <td>{{ talk.language }}</td>
                    <td>{{ talk.level }}</td>
                    <td class="avg-score">{{ talk.avg_score|number_format(3) }}</td>
                    <td class="votes">{{ votes }}</td>
                    {% if is_granted('ROLE_VOTER') %}
                        <td class="nowrap">
                            {% include 'stars.twig' with { talk_id: talk._id, rating: rating } only %}
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#talks-table").tablesorter();
        });
    </script>
{% endblock %}
