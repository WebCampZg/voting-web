<button data-rating="1" data-talk-id="{{ talk_id }}" type="button" class="rate-talk btn btn-sm btn-{{ rating == 1 ? 'primary' : 'default' }}">1</button>
<button data-rating="2" data-talk-id="{{ talk_id }}" type="button" class="rate-talk btn btn-sm btn-{{ rating == 2 ? 'primary' : 'default' }}">2</button>
<button data-rating="3" data-talk-id="{{ talk_id }}" type="button" class="rate-talk btn btn-sm btn-{{ rating == 3 ? 'primary' : 'default' }}">3</button>
<button data-rating="4" data-talk-id="{{ talk_id }}" type="button" class="rate-talk btn btn-sm btn-{{ rating == 4 ? 'primary' : 'default' }}">4</button>
<button data-rating="5" data-talk-id="{{ talk_id }}" type="button" class="rate-talk btn btn-sm btn-{{ rating == 5 ? 'primary' : 'default' }}">5</button>
<button data-talk-id="{{ talk_id }}" type="button" class="unrate-talk btn btn-sm btn-warning">
    <span class="glyphicon glyphicon-remove"></span>
</button>
