{% if status == 'accepted' %}
    <button data-action="change-status" data-talk-id="{{ talk_id }}" data-status="pending" class="btn btn-sm btn-success">
        <span class="glyphicon glyphicon-ok"></span>
    </button>
{% elseif status == 'pending' %}
    <button data-action="change-status" data-talk-id="{{ talk_id }}" data-status="accepted" class="btn btn-sm btn-default">
        <span class="glyphicon glyphicon-ok"></span>
    </button>
{% endif %}
